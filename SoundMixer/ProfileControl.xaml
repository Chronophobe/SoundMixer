<UserControl x:Class="SoundMixer.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundMixer"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Profile:"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Processes:"/>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="3" Name="NameBox" TextChanged="UpdateName" />
        <TextBox Grid.Column="1" Grid.Row="1" Margin="3" Name="ProcessOne" TextChanged="UpdateProcessOne"/>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="3" Name="ProcessTwo" TextChanged="UpdateProcessTwo" />
        <TextBox Grid.Column="3" Grid.Row="1" Margin="3" Name="ProcessThree" TextChanged="UpdateProcessThree" />
    </Grid>
</UserControl>

